<p id="notice"><%= notice %></p>

<h1>Artists</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @artists.each do |artist| %>
      <tr>
        <td><%= artist.name %></td>
        <td><%= link_to 'Show', artist %></td>
        <td><%= link_to 'Edit', edit_artist_path(artist) %></td>
        <td><%= link_to 'Destroy', artist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Associated Songs', songs_path(artist_id: artist.id) %></td>
        <td><%= link_to 'Associated Albums', albums_path(artist_id: artist.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

